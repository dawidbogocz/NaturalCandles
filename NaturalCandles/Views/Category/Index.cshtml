@model List<Category>

	<div class="container">
		<div class="row pt-4 pb-2">
			<div class="col-6">
				<h2 class="text-primary">
					Category List
				</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Stwórz nową kategorie
				</a>
			</div>
		</div>
<thead>
<table class="table table-border table striped">
	<tr>
		<th>
			Category Name
		</th>
		<th>
			Products
		</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var obj in Model.OrderBy(u=>u.Products))
	{
		<tr>
			<td>
				@obj.Name
			</td>
			<td>
				@obj.Products
			</td>
		</tr>
	}
</tbody>
</table>

</div>
