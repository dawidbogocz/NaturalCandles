@model Category

<form method="post">
	<input asp-for="CategoryId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr/>
		</div>
		@* <div asp-validation-summary="ModelOnly"></div> *@
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Products" class="p-0"></label>
			<input asp-for="Products" class="form-control"/>
			<span asp-validation-for="Products" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="CategoryType" class="p-0"></label>
		<select asp-for="CategoryType" class="form-control"
				asp-items="Html.GetEnumSelectList<NaturalCandles.Models.Enums.ProductCategory>()">
			<option value="">-- Select Category Type --</option>
		</select>
			<span asp-validation-for="CategoryType" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-primary form-control" >Update</button>
			</div>
			<div class="col-6 col-md-3">
			<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
				 Back to list
			 </a>
		 </div>
	</div>
</form>

@section Scripts{
	@{
		<patrial name="_ValidationScriptsPartial" />
	}
}